{% extends 'layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('adminJob') }}
{% endblock %}

{% block body %}
    <section class="adminOffre">
        <div class="container">
            <h1 class="text-center mt-3">Offres d'emploi</h1>
            <div class="row my-3">
                <div class="col-lg-2">
                    <a class="btn btn-primary dropdown-toggle ms-5 me-5 text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Trier par
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li>
                            <a class="dropdown-item" href="#"></a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-8 d-flex justify-content-center">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                        <option selected>Domaine d'études</option>
                        <option value="1">Général</option>
                    </select>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                {% for job in jobs %}
                    <div class=" col-lg-3 data-card">
                        <h2 class="pb-2 text-center">{{ job.post|upper }}</h2>
                        <h3 class="post mt-2 text-center">{{ job.company.companyName|upper }}</h3>
                        <h3 class="postalCode mb-3 pb-2 text-center">{{ job.postalCode }}
                            :
                            {{ job.city|capitalize }}</h3>
                        <p>{{ job.description }}</p>
                        <div class="d-flex justify-content-center">
                            <a href="#" class="btn btn-light text-center">Postuler</a>
                        </div>
                        <h4 class="mt-2 text-center">Postez-le : {{ job.registeredAt ? job.registeredAt|date('Y-m-d') : '' }}</h4>
                    </div>
                {% else %}
                    <p class="alert alert-warning text-center bg-primary text-light">Aucune offre d'emploi</p>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}