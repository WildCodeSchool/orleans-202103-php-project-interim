{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('adminJob') }}
{% endblock %}

{% block body %}
    <section class="adminOffre">
        <div class="container">
            <h1 class="text-center mt-3">Offres d'emploi</h1>
            <div class="d-flex justify-content-center">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button>Filtrer</button>
                {{ form_end(form) }}
            </div>
            <div class="row d-flex justify-content-center">
                {% for job in jobs %}
                    <div class=" col-lg-3 data-card">
                        <h2 class="pb-2 text-center d-flex align-items-center justify-content-center">{{ job.post|upper }}</h2>
                        <h3 class="post mt-2 text-center">
                            <i class="fas fa-industry"></i>
                            {{ job.company.companyName|upper }}</h3>
                        <h3 class="postalCode mb-3 pb-2 text-center">
                            <i class="fas fa-map-marker-alt"></i>
                            {{ job.city|capitalize }}
                            ({{ job.postalCode }})
                        </h3>
                        <p>{{ job.description }}</p>
                        <div class="d-flex justify-content-center">
                            <a href="{{ path('offer_show', {'id': job.id}) }}" class="postuler btn btn-light text-center">+ Voir plus</a>
                        </div>
                        <h4 class="mt-2 text-center">
                            <i class="fas fa-table"></i>
                            Post√©e le :
                            {{ job.registeredAt ? job.registeredAt|date('Y-m-d') : '' }}</h4>
                    </div>
                {% else %}
                    <p class="alert alert-warning text-center bg-primary text-light">Aucune offre d'emploi</p>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
