{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent() }}
	| Contact
{% endblock %}

{% block body %}
	<section class="container">
		<h3 class="text-center py-3">Nous contacter</h3>

		<div class="bg-info shadow p-3 mb-5 rounded form-group row mt-sm-0 px-xs-0 py-sm-0">
			<div class="justify-content-start">
				{{ form_start(form) }}
				<div class="form-group pt-5 col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group col col-lg-6 col-md-12 mx-auto">
					{{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group pb-5 col pt-3 col-lg-6 col-md-12 mx-auto">
					<input type="submit" value="Envoyer" class="btn btn-primary btn-lg w-100">
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
{% endblock %}
