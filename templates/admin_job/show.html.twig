{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Post</th>
                <td>{{ job.Post }}</td>
            </tr>
            <tr>
                <th>RegistereAt</th>
                <td>{{ job.RegistereAt ? job.RegistereAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ job.StartAt ? job.StartAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ job.EndAt ? job.EndAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HoursAWeek</th>
                <td>{{ job.HoursAWeek }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ job.City }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ job.PostalCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_job_index') }}">back to list</a>

    <a href="{{ path('admin_job_edit', {'id': job.id}) }}">edit</a>

    {{ include('admin_job/_delete_form.html.twig') }}
{% endblock %}
